<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">    
    <!-- Min CSS -->
    <link rel="stylesheet" href="/css/admin-orders.css">

    <title>EC Store</title>

     <!-- Optional JavaScript -->
    <script defer src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>

    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script defer src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script defer src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>

    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/a9c4c9de9b.js" crossorigin="anonymous"></script>

  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light bg-light">
        <a class="navbar-brand" href="/admin">
            <img src="/img/EC_Clique_Logo.png" alt="" width="48" class="d-inline-block align-text-top" id="logo">
        </a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse pr-0" id="navbarSupportedContent">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="btn btn-outline-dark mr-2" id="test" href="/admin-products"><i class="fas fa-magic"></i> Product panel</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-dark" href="/admin-orders"><i class="fas fa-id-card"></i></i> Order panel</a>
                </li>
            </ul>
            <ul class="nav navbar-nav ml-auto" id="test2">
                <form action="/log-out" method="post">
                    <button type="submit" class="btn btn-outline-link mt-0"><i class="fas fa-sign-out-alt"></i> Log out</button>
                </form>
            </ul>
        </div>
    </nav>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-5 gul">
            <li class="breadcrumb-item"><a class="text-dark" href="/admin">Overview</a></li>
            <li class="breadcrumb-item active">Order panel</li>
        </ol>
    </nav>

    <!-- Content -->
    <div class="shadow p-3 mt-4 mb-5 bg-white mx-auto rounded text-center" style="min-width:300px; max-width:30%;">
        <h1 class="display-4 text-center">Order panel</h1>
        <a href="#archive" class="btn btn-outline-link"><i class="fas fa-forward"></i> Skip to archive</a>
    </div>

    <hr class="mb-4 d-none d-sm-block" width="500px">
    <% if (orders.length) { %>
        <div class="container">
            <div class="row mx-auto">
                <% orders.sort((a, b) => b.date - a.date).forEach(order => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h1 class="h3 font-weight-bold"><%= order.firstname %> <%= order.lastname %>'s order</h1>
                                <small><%= order.date.toLocaleString('se-SE') %></small>
                                <hr class="my-3">
                                <h1 class="h5 font-weight-bold">Shipping information:</h1>
                                <div class="ml-2 mb-3">
                                    <%= order.firstname %> <%= order.lastname %><br>
                                    <%= order.address %>, <%= order.zipCode %><br>
                                    <%= order.city %>, <%= order.country %>
                                </div>

                                <h1 class="h5 font-weight-bold">Items:</h1>
                                <% order.bagItems.forEach(item => { %>
                                    • <%= item.name %> (<%= item.size %>): <%= item.quantity %>st<br>
                                <% }); %>

                                <h1 class="h5 font-weight-bold mt-3">Email: <a class="text-gul" href="mailto:<%= order.email %>"><%= order.email %></a></h1>
                                <hr class="my-3">
                                <form action="/archive-order/<%= order._id %>" method="post" class="float-left">
                                    <button class="btn btn-light" type="submit"><i class="fas fa-archive"></i> Archive</button>
                                </form>
                            </div>
                        </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>      
    <% }
    else { %>
        <h1 class="h2 text-center">No orders yet</h1>
    <% }; %>

    <h1 class="display-4 text-center my-3">Archived orders</h1>
    <hr class="mb-4 d-none d-sm-block" width="500px">
    <% if (archive.length) { %>
        <div class="container">
            <div class="row mx-auto">
                <% archive.sort((a, b) => b.date - a.date).forEach(order => { %>
                    <div class="col-md-4">
                        <div class="card mb-4">
                            <div class="card-body">
                                <h1 class="h3 font-weight-bold"><%= order.firstname %> <%= order.lastname %>'s order</h1>
                                <small><%= order.date.toLocaleString('se-SE') %></small>
                                <hr class="my-3">
                                <h1 class="h5 font-weight-bold">Shipping information:</h1>
                                <div class="ml-2 mb-3">
                                    <%= order.firstname %> <%= order.lastname %><br>
                                    <%= order.address %>, <%= order.zipCode %><br>
                                    <%= order.city %>, <%= order.country %>
                                </div>

                                <h1 class="h5 font-weight-bold">Items:</h1>
                                <% order.bagItems.forEach(item => { %>
                                    • <%= item.name %> (<%= item.size %>): <%= item.quantity %>st<br>
                                <% }); %>

                                <h1 class="h5 font-weight-bold mt-3">Email: <a class="text-gul" href="mailto:<%= order.email %>"><%= order.email %></a></h1>
                                <hr class="my-3">
                                <form action="/un-archive-order/<%= order._id %>" method="post" class="float-left">
                                    <button class="btn btn-light" type="submit"><i class="fas fa-times"></i> Un-archive</button>
                                </form>
                                <form action="/delete-order/<%= order._id %>?_method=delete" method="post" class="float-right">
                                    <button class="btn btn-danger" type="submit"><i class="fas fa-trash-alt"></i> Delete</button>
                                </form>                            </div>
                        </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>      
    <% }
    else { %>
        <h1 class="h2 text-center">No archived orders yet</h1>
    <% }; %>
    <!-- Footer -->
    <div class="position-sticky text-center my-5" id="archive">
      <p>Made by: <a id="color" href="http://www.github.com/SkrodS">Robin Widjeback</a></p>
    </div>
  </body>
</html>